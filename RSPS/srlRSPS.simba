procedure setUpSMART;
begin
  {$IFNDEF SMART}
    activateClient();
  {$ELSE}
    initSmart(smartForceNewClient);

    if (smartEnableDrawing) then
      smartSetupDrawing();
  {$ENDIF}

  {$IFDEF SMART}
  if (waitClientReady()) then
    writeln('Client is ready.');
  {$ELSE}
    writeln('Smart is not being used');
  {$ENDIF}
end;






